@{
    ViewData["Title"] = "Start Page";
}
@model int
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            margin-top: 50px;
        }
        .form-container {
            max-width: 500px;
            margin: auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        .form-container label {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="text-center">
            <h1 class="display-4">ADD PRODUCTS</h1>
            <div class="form-container">
                <form method="post">
                    <div class="form-group">
                        <label for="id">Enter ID</label>
                        <input id="id" class="form-control" type="number" name="id" />
                    </div>
                    <div class="form-group">
                        <label for="name">Enter name</label>
                        <input id="name" class="form-control" type="text" name="name" />
                    </div>
                    <div class="form-group">
                        <label for="price">Enter price</label>
                        <input id="price" class="form-control" type="number" name="price" />
                    </div>
                    <div class="form-group">
                        <label for="createdDate">Enter today date</label>
                        <input id="createdDate" class="form-control" type="date" name="createdDate" />
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary" asp-action="Index">>Add</button>
                    <button type="submit" class="btn btn-secondary" asp-action="ViewProductsAsList">List with products</button>
                    <button type="submit" class="btn btn-secondary" asp-action="ViewProductsAsTable">Table with products</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>